# Server Configuration
SERVER_PORT=3000
PREFIX_API_VERSION=/api/v3

# JWT Keys
JWT_ACCESS_KEY=vietpro_access_key
JWT_REFRESH_KEY=vietpro_refresh_key
JWT_RESET_KEY=vietpro_reset_key_strong_secret

# Session Secret
SESSION_SECRET=vietpro_session_secret_key_default

# Google OAuth Configuration
# Lấy từ: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth Configuration
# Lấy từ: https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vietpro_mobile_shop

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Configuration (for nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
