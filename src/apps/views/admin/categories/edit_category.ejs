<%-include("../layout/head")%>
	<%-include("../layout/header")%>
		<%-include("../layout/sidebar")%>	
		
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <div class="row">
            <ol class="breadcrumb mt-3">
                <li><a href="/api/admin/dashboard"><svg class="glyph stroked home">
                            <use xlink:href="#stroked-home"></use>
                        </svg></a></li>
                <li><a href="/api/admin/categories">Quản lý danh mục</a></li>
                <li class="active">
                    <%= category.title %>
                </li>
            </ol>
        </div><!--/.row-->
    
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh mục: <%= category.title %>
                </h1>
            </div>
        </div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-8">
                            <% if (!success && message) { %>
                                <div class="alert alert-danger">
                                    <%= message %>
                                </div>
                                <% } %>
                                    <form action="/api/admin/categories/update/<%= category._id%>" role="form"
                                        method="post">
                                        <div class="form-group">
                                            <label>Tên danh mục:</label>
                                            <input type="text" name="title" required
                                                value="<%= oldData.title || category.title %>" class="form-control"
                                                placeholder="Tên danh mục...">
                                        </div>
                                        <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                                        <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div><!-- /.col-->
        </div> <!--/.main-->
            <%-include("../layout/footer")%>

