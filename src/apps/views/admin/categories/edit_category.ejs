<%-include("../../layout/head")%>
    <%-include("../../layout/header")%>
        <%-include("../../layout/sidebar")%>   
        
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb mt-3">
            <li><a href="/admin"><svg class="glyph stroked home">
                <use xlink:href="#stroked-home"></use>
            </svg></a></li>
            <li><a href="/admin/categories">Quản lý danh mục</a></li>
            <li class="active">
                <%= category.name %>
            </li>
        </ol>
    </div><div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh mục: <%= category.name %>
            </h1>
        </div>
    </div><div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-8">

                        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                            <div class="alert alert-danger">
                                <ul>
                                    <% errors.forEach(error => { %>
                                        <li><%= error.msg %></li>
                                    <% }) %>
                                </ul>
                            </div>
                        <% } %>

                        <form action="/admin/categories/update/<%= category._id%>" role="form" method="post">
                            <div class="form-group">
                                <label>Tên danh mục:</label>
                                <input type="text" name="name" required
                                    value="<%= errors && errors.length > 0 ? oldData[0].name : category.name %>" 
                                    class="form-control"
                                    placeholder="Tên danh mục...">
                            </div>
                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                            <a href="/admin/categories" class="btn btn-default">Hủy</a>
                        </form>
                    </div>
                </div>
            </div>
        </div></div>    
<%-include("../../layout/footer")%>