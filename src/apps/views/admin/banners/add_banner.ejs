<%-include("../layout/head")%>
<%-include("../layout/header")%>
<%-include("../layout/sidebar")%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb mt-3">
            <li>
                <a href="/admin">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="/admin/banners">Quản lý quảng cáo</a></li>
            <li class="active">Thêm quảng cáo</li>
        </ol>
    </div>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="alert alert-danger mt-3">
        <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
        </ul>
    </div>
    <% } %>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm quảng cáo</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form method="POST" action="/admin/banners/store"
                enctype="multipart/form-data">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width:200px;">Ảnh <span
                                        style="color:red;">*</span></th>
                                <td>
                                    <input type="file" name="image"
                                        class="form-control" accept="image/*"
                                        required>
                                    <small class="text-muted">Chỉ chấp nhận định
                                        dạng ảnh (jpg, png, gif)</small>
                                </td>
                            </tr>
                            <tr>
                                <th>Link (URL)</th>
                                <td>
                                    <input type="url" name="url"
                                        class="form-control"
                                        placeholder="https://example.com"
                                        value="<%= oldData.url || '' %>">
                                </td>
                            </tr>
                            <tr>
                                <th>Vị trí</th>
                                <td>
                                    <input type="number" min="0" name="position"
                                        class="form-control" placeholder="0"
                                        value="<%= oldData.position || 0 %>">
                                </td>
                            </tr>
                            <tr>
                                <th>Trạng thái</th>
                                <td>
                                    <select name="publish" class="form-control"
                                        required>
                                        <option value="false"
                                            <%=(oldData.publish === false ||
                                            oldData.publish === 'false') ?
                                            'selected' : '' %>>Ẩn</option>

                                        <option value="true" <%=(oldData.publish
                                            === true || oldData.publish ===
                                            'true' || oldData.publish ===
                                            undefined) ? 'selected' : '' %>>Hiển
                                            thị</option>
                                    </select>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-footer"
                        style="display:flex; justify-content:space-between; align-items:center;">
                        <div>
                            <a href="/admin/banners" class="btn btn-default">
                                <i class="glyphicon glyphicon-arrow-left"></i>
                                Quay lại
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">
                                <i class="glyphicon glyphicon-floppy-disk"></i>
                                Lưu
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/static/admin/js/jquery-1.11.1.min.js"></script>
<script src="/static/admin/js/bootstrap.min.js"></script>
<%-include("../layout/footer")%>