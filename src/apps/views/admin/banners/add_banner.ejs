<%-include("../layout/head")%>
<%-include("../layout/header")%>
<%-include("../layout/sidebar")%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb mt-3">
            <li>
                <a href="/api/admin/dashboard">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="/api/admin/advertisements">Quản lý Banner / Slider</a></li>
            <li class="active">Thêm Banner / Slider</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm Banner / Slider</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form method="POST" action="/api/admin/advertisement/store" enctype="multipart/form-data">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width:200px;">Tên</th>
                                <td>
                                    <input type="text" name="name" class="form-control" placeholder="Nhập tên banner/slider" required>
                                </td>
                            </tr>
                            <tr>
                                <th>Mô tả</th>
                                <td>
                                    <textarea name="description" class="form-control" rows="3" placeholder="Nhập mô tả" required></textarea>
                                </td>
                            </tr>
                            <tr>
                                <th>Loại</th>
                                <td>
                                    <select name="type" class="form-control" required>
                                        <option value="">-- Chọn loại --</option>
                                        <option value="banner">Banner</option>
                                        <option value="slider">Slider</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Link</th>
                                <td>
                                    <input type="url" name="link" class="form-control" placeholder="https://example.com" required>
                                </td>
                            </tr>
                            <tr>
                                <th>Ảnh</th>
                                <td>
                                    <input type="file" name="thumbnail_ads" class="form-control" accept="image/*" required>
                                    <small class="text-muted">Kích thước đề xuất: 1920x600px cho slider, 1200x400px cho banner</small>
                                </td>
                            </tr>
                            <tr>
                                <th>Trạng thái</th>
                                <td>
                                    <select name="status" class="form-control" required>
                                        <option value="inactive">Ẩn</option>
                                        <option value="active">Hiển thị</option>
                                    </select>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-footer" style="display:flex; justify-content:space-between; align-items:center;">
                        <div>
                            <a href="/api/admin/advertisements" class="btn btn-default">
                                <i class="glyphicon glyphicon-arrow-left"></i> Quay lại
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">
                                <i class="glyphicon glyphicon-floppy-disk"></i> Lưu
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="js/jquery-1.11.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<%-include("../layout/footer")%>
