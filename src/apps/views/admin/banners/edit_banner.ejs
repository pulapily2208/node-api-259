<%-include("../layout/head")%>
<%-include("../layout/header")%>
<%-include("../layout/sidebar")%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb mt-3">
            <li>
                <a href="/api/admin/dashboard">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="/api/admin/advertisements">Quản lý Banner / Slider</a></li>
            <li class="active">Chỉnh sửa <%= ads.type == "banner" ? "Banner " : "Slider"%> <%=  ads.name%></li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Chỉnh sửa <%= ads.type == "banner" ? "Banner " : "Slider"%> <%=  ads.name%></h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form method="POST" action="/api/admin/advertisement/update/<%=ads._id%>" enctype="multipart/form-data">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width:200px;">Tên</th>
                                <td>
                                    <input type="text" name="name" class="form-control" value="<%=  ads.name%>" required>
                                </td>
                            </tr>
                            <tr>
                                <th>Mô tả</th>
                                <td>
                                    <textarea name="description" class="form-control" rows="3"><%=  ads.description%></textarea>
                                </td>
                            </tr>
                            <tr>
                                <th>Loại</th>
                                <td>
                                    <select name="type" class="form-control" required>
                                        <option value="banner" <%=  ads.type == 'banner' ? "selected" : '' %> >Banner</option>
                                        <option value="slider" <%=  ads.type == 'slider' ? "selected" : '' %> >Slider</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Link</th>
                                <td>
                                    <input type="url" name="link" class="form-control" value="<%=  ads.link%>">
                                </td>
                            </tr>
                            <tr>
                                <th>Ảnh hiện tại</th>
                                <td>
                                    <img src="../upload/<%=  ads.thumbnail_ads%>" alt="Banner" style="max-width:300px; border:1px solid #ddd; padding:5px; margin-bottom:10px;">
                                    <input type="file" name="thumbnail_ads" class="form-control" accept="image/*">
                                    <small class="text-muted">Chọn ảnh mới nếu muốn thay đổi</small>
                                </td>
                            </tr>
                            <tr>
                                <th>Trạng thái</th>
                                <td>
                                    <select class="form-control" name="status">
                                        <option value="active" value="active" <%=  ads.type == 'banner' ? "selected" : '' %> >Hiển thị</option>
                                        <option value="inactive" value="inactive" <%=  ads.type == 'banner' ? "selected" : '' %> >Ẩn</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Ngày tạo</th>
                                <td>
                                    <input type="text" class="form-control" value="2025-08-12 10:30" readonly>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-footer" style="display:flex; justify-content:space-between; align-items:center;">
                        <div>
                            <a href="/api/admin/advertisement" class="btn btn-default">
                                <i class="glyphicon glyphicon-arrow-left"></i> Quay lại
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">
                                <i class="glyphicon glyphicon-floppy-disk"></i> Lưu thay đổi
                            </button>
                            <a href="/api/admin/advertisement/delete/<%=ads._id%>" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa banner/slider này?');">
                                <i class="glyphicon glyphicon-remove"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="js/jquery-1.11.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<%-include("../layout/footer")%>
