<%-include("../layout/head")%>
<%-include("../layout/header")%>
<%-include("../layout/sidebar")%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb mt-3">
            <li>
                <a href="/admin">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="/admin/banners">Quản lý quảng cáo</a></li>
            <li class="active">Chỉnh sửa quảng cáo</li>
        </ol>
    </div>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="alert alert-danger mt-3">
        <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
        </ul>
    </div>
    <% } %>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Chỉnh sửa quảng cáo</h1>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <form method="POST" action="/admin/banners/update/<%= ad._id %>"
                enctype="multipart/form-data">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width:200px;">Ảnh hiện tại</th>
                                <td>
                                    <% if (ad.image) { 
                                           let curAdImg = ad.image.replace(/^\/public\/upload/, '/upload');
                                           if (curAdImg && !curAdImg.startsWith('/upload/')) {
                                               curAdImg = '/upload/ads/' + curAdImg.replace(/^\/+/, '');
                                           }
                                        %>
                                    <img src="<%= curAdImg %>"
                                        style="max-width:300px; max-height:150px; margin-bottom: 10px;" alt="Ad Image" onerror="this.src='/static/admin/img/placeholder.png'">
                                    <% } %>
                                </td>
                            </tr>
                            <tr>
                                <th>Chọn ảnh mới</th>
                                <td>
                                    <input type="file" name="image"
                                        class="form-control" accept="image/*">
                                    <small class="text-muted">Chỉ chọn nếu muốn
                                        thay đổi ảnh.</small>
                                </td>
                            </tr>
                            <tr>
                                <th>Link (URL)</th>
                                <td>
                                    <input type="url" name="url"
                                        class="form-control"
                                        placeholder="https://example.com"
                                        value="<%= ad.url %>">
                                </td>
                            </tr>
                            <tr>
                                <th>Loại</th>
                                <td>
                                    <select name="type" class="form-control" required>
                                        <option value="banner" <%=  ad.type == 'banner' ? "selected" : '' %> >Banner</option>
                                        <option value="slider" <%=  ad.type == 'slider' ? "selected" : '' %> >Slider</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Vị trí</th>
                                <td>
                                    <input type="number" min="0" name="position"
                                        class="form-control" placeholder="0"
                                        value="<%= ad.position %>">
                                </td>
                            </tr>
                            <tr>
                                <th>Trạng thái</th>
                                <td>
                                    <select name="publish" class="form-control"
                                        required>
                                        <option value="false" <%=!ad.publish ?
                                            'selected' : '' %>>Ẩn</option>
                                        <option value="true" <%=ad.publish ?
                                            'selected' : '' %>>Hiển thị</option>
                                    </select>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-footer"
                        style="display:flex; justify-content:space-between; align-items:center;">
                        <div>
                            <a href="/admin/banners" class="btn btn-default">
                                <i class="glyphicon glyphicon-arrow-left"></i>
                                Quay lại
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-warning">
                                <i class="glyphicon glyphicon-pencil"></i> Cập
                                nhật
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/static/admin/js/jquery-1.11.1.min.js"></script>
<script src="/static/admin/js/bootstrap.min.js"></script>
<%-include("../layout/footer")%>