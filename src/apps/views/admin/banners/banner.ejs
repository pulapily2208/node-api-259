<%-include("../layout/head")%>
<%-include("../layout/header")%>
<%-include("../layout/sidebar")%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb mt-3">
            <li>
                <a href="/admin">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li class="active">Quản lý quảng cáo</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách quảng cáo</h1>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="pt-3 text-left ms-4">
            <a href="/admin/banners/create" class="btn btn-success">
                <i class="glyphicon glyphicon-plus"></i> Thêm quảng cáo
            </a>
        </div>

        <div class="panel-body tab-content">
            <!-- Tất cả -->
            <div id="all" class="tab-pane fade in active">
                <% if (ads.length===0) { %>
                <p class="text-center mt-3">Chưa có quảng cáo nào!</p>
                <% } else { %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 5%">ID</th>
                            <th class="text-center" style="width: 35%">Ảnh</th>
                            <th class="text-center" style="width: 20%">Link</th>
                            <th class="text-center" style="width: 8%">Vị
                                trí</th>
                            <th class="text-center" style="width: 12%">Trạng
                                thái</th>
                            <th class="text-center" style="width: 20%">Hành
                                động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% ads.forEach((ad, index)=> { %>
                        <tr>
                            <td class="text-center">
                                <%= index + 1 %>
                            </td>
                            <td class="text-center">
                                <img src="/uploads/ads/<%= ad.image %>"
                                    style="max-width:200px; max-height:100px;">
                            </td>
                            <td><a href="<%= ad.link %>" target="_blank">
                                    <%= ad.link %>
                                </a></td>
                            <td class="text-center">
                                <%= ad.position%>
                            </td>
                            <td class="text-center">
                                <span
                                    class="label <%= ad.publish ? 'label-success' : 'label-danger' %>">
                                    <%= ad.publish ? 'Hiển thị' : 'Ẩn' %>
                                </span>
                            </td>
                            <td class="text-center">
                                <% if (index > 0 || page > 1) { %>
                                <a href="/admin/banners/moveup/<%= ad._id %>"
                                    class="btn btn-info btn-sm">
                                    <i class="glyphicon glyphicon-arrow-up"></i>
                                </a>
                                <% } else { %>
                                <a href="#" class="btn btn-info btn-sm disabled"
                                    style="opacity: 0.5; cursor: default;">
                                    <i class="glyphicon glyphicon-arrow-up"></i>
                                </a>
                                <% } %>
                                <% if (index < ads.length - 1 || page <
                                totalPages) { %>
                                <a href="/admin/banners/movedown/<%= ad._id %>"
                                    class="btn btn-info btn-sm">
                                    <i
                                        class="glyphicon glyphicon-arrow-down"></i>
                                </a>
                                <% } else { %>
                                <a href="#" class="btn btn-info btn-sm disabled"
                                    style="opacity: 0.5; cursor: default;">
                                    <i
                                        class="glyphicon glyphicon-arrow-down"></i>
                                </a>
                                <% } %>
                                <a href="/admin/banners/edit/<%= ad._id %>"
                                    class="btn btn-warning btn-sm">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                </a>
                                <a href="/admin/banners/delete/<%= ad._id %>"
                                    class="btn btn-danger btn-sm"
                                    onclick="return confirm('Bạn có chắc muốn xóa không?');">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% } %>
            </div>
            <div class="panel-footer">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <!-- Nút Previous -->
                        <li
                            class="page-item <%= page === 1 ? 'disabled' : '' %>">
                            <a class="page-link"
                                href="/api/admin/advertisement?page=<%= prev %>">&laquo;</a>
                        </li>
                        <% for (let pageNumber of paginate) { %>
                        <% if (pageNumber==="..." ) { %>
                        <li class="page-item disabled"><a class="page-link"
                                href="#">...</a></li>
                        <% } else { %>
                        <li
                            class="page-item <%= page === pageNumber ? 'active' : '' %>">
                            <a class="page-link"
                                href="/admin/banners?page=<%= pageNumber %>">
                                <%= pageNumber %>
                            </a>
                        </li>
                        <% } %>
                        <% } %>
                        <!-- Nút Next -->
                        <li
                            class="page-item <%= page === totalPages ? 'disabled' : '' %>">
                            <a class="page-link"
                                href="/admin/banners?page=<%= next %>">&raquo;</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery-1.11.1.min.js"></script>
<script src="/js/bootstrap.min.js"></script>

<%-include("../layout/footer")%>
