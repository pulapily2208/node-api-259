<%-include("../layout/head")%>
<%-include("../layout/header")%>
<%-include("../layout/sidebar")%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb mt-3">
            <li>
                <a href="/admin">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="/admin/comments">Danh sách bình luận</a></li>
            <li class="active">Chi tiết bình luận</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Chi tiết bình luận</h1>
        </div>
    </div><!--/.row-->

    <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <%= success %>
        </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <%= error %>
        </div>
    <% } %>

    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Thông tin bình luận</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width:200px;">Người bình luận</th>
                            <td><%= comment.name || comment.full_name || 'N/A' %></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td><%= comment.email %></td>
                        </tr>
                        <tr>
                            <th>Nội dung bình luận</th>
                            <td style="white-space: pre-wrap;"><%= comment.displayContent || comment.content || comment.description || '' %></td>
                        </tr>
                        <tr>
                            <th>Trạng thái</th>
                            <td>
                                <% if (comment.status === 'pending') { %>
                                    <span class="label label-warning">Chờ duyệt</span>
                                <% } else if (comment.status === 'approved' || comment.status === 'active') { %>
                                    <span class="label label-success">Đã duyệt</span>
                                <% } else { %>
                                    <span class="label label-default"><%= comment.status %></span>
                                <% } %>
                            </td>
                        </tr>
                        <tr>
                            <th>Ngày tạo</th>
                            <td>
                                <%= new Date(comment.createdAt).toLocaleDateString('vi-VN') %>
                                <%= new Date(comment.createdAt).toLocaleTimeString('vi-VN') %>
                            </td>
                        </tr>
                        <tr>
                            <th>Cập nhật lần cuối</th>
                            <td>
                                <%= new Date(comment.updatedAt).toLocaleDateString('vi-VN') %>
                                <%= new Date(comment.updatedAt).toLocaleTimeString('vi-VN') %>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Thông tin sản phẩm</h3>
                </div>
                <div class="panel-body">
                    <% if (comment.product_id) { %>
                        <div class="text-center mb-3">
                            <% if (comment.product_id.image) { %>
                                <img src="<%= comment.product_id.image %>" alt="<%= comment.product_id.name %>" 
                                     class="img-responsive" style="max-height: 200px; margin: 0 auto;">
                            <% } %>
                        </div>
                        <table class="table table-bordered">
                            <tr>
                                <th>Tên sản phẩm</th>
                                <td><%= comment.product_id.name %></td>
                            </tr>
                            <tr>
                                <th>Giá</th>
                                <td><%= (comment.product_id.price || 0).toLocaleString('vi-VN') %> đ</td>
                            </tr>
                        </table>
                        <a href="/admin/products/detail/<%= comment.product_id._id %>" class="btn btn-info btn-block">
                            <i class="glyphicon glyphicon-eye-open"></i> Xem sản phẩm
                        </a>
                    <% } else { %>
                        <p class="text-muted">Không có thông tin sản phẩm</p>
                    <% } %>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Hành động</h3>
                </div>
                <div class="panel-body">
                    <form action="/admin/comments/update/<%= comment._id %>" method="POST" style="margin: 0;">
                        <div class="btn-group-vertical btn-block">
                            <button type="submit" name="status" value="approved" class="btn btn-success">
                                <i class="glyphicon glyphicon-ok"></i> Duyệt bình luận
                            </button>
                            <button type="submit" name="status" value="pending" class="btn btn-warning">
                                <i class="glyphicon glyphicon-time"></i> Chờ duyệt
                            </button>
                        </div>
                    </form>
                    <div class="btn-group-vertical btn-block" style="margin-top: 10px;">
                        <a href="/admin/comments/delete/<%= comment._id %>" 
                           class="btn btn-danger" 
                           onclick="return confirm('Bạn có chắc muốn xóa bình luận này?');">
                            <i class="glyphicon glyphicon-trash"></i> Xóa bình luận
                        </a>
                        <a href="/admin/comments" class="btn btn-default">
                            <i class="glyphicon glyphicon-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/.row-->
</div><!--/.main-->

<script src="/admin/js/jquery-1.11.1.min.js"></script>
<script src="/admin/js/bootstrap.min.js"></script>
<%-include("../layout/footer")%>
